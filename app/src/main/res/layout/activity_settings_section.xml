<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/profile_sample"
                android:scaleType="centerCrop"
                android:background="@drawable/profile_circle"
                android:contentDescription="Profile Image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@example.com"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:background="#F3F4F6"
            android:paddingTop="4dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/editProfile_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile_edit"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/editProfileTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Profile"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/changePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/changePass_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/password_img"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/changePassTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Change Password"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linkedAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/linkedAccount_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_linked_account"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/linkedAccountTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Linked Accounts"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:background="#F3F4F6"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/emailNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp">

            <ImageView
                android:id="@+id/emailNotification_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/emailNotificationTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email Notifications"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switchToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#22C55E"
                android:checked="true"
                android:drawableTint="#22C55E"
                android:minWidth="48dp"
                android:minHeight="48dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enableNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp">

            <ImageView
                android:id="@+id/enableNotification_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_push_notification"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/enableNotificationTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Push Notifications"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switchToggle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#22C55E"
                android:checked="true"
                android:drawableTint="#22C55E"
                android:minWidth="48dp"
                android:minHeight="48dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/darkModeOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp">

            <ImageView
                android:id="@+id/darkModeOn_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dark_mode"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/darkModeOnTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Mode"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/darkModeSwitchToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#22C55E"
                android:drawableTint="#22C55E"
                android:minWidth="48dp"
                android:minHeight="48dp"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy and Security"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:background="#F3F4F6"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/privacySettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/privacySettings_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_privacy_settings"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/privacySettingsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacy Settings"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/security_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_security"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/securityTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Security"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/deleteAccount_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete_account"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/deleteAccountTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Account"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textStyle="bold"
            android:textColor="#6B7280"
            android:background="#F3F4F6"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:id="@+id/helpCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/helpCenter_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_help_center"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/helpCenterTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help Center"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/termsAndPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/termsAndPolicy_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_terms_and_policy"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/termsAndPolicyTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terms &amp; Privacy Policy"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#B0B0B0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingHorizontal="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_version"
                app:tint="#22C55E"
                android:layout_marginStart="5dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Version"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.1.0"
                android:textSize="14sp"
                android:textColor="#6B7280" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignOut"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:text="Sign Out"
            android:textAllCaps="false"
            android:backgroundTint="#22C55E"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            app:cornerRadius="4dp" />
    </LinearLayout>
</ScrollView>