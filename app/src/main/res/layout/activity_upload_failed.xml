<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F0F9F2">

    <ImageView
        android:id="@+id/imageUploadFailed"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/upload_failed_img" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Failed"
        android:textColor="#2E2E2E"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looks like your tree photo couldn't be uploaded. Don't worry, you can try again or save it to upload later."
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:lineSpacingExtra="4dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRetry"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:icon="@drawable/ic_retry"
        app:iconGravity="textStart"
        android:text="Retry Upload"
        android:textAllCaps="false"
        android:backgroundTint="#16A34A"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        app:cornerRadius="4dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveDraft"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:icon="@drawable/ic_save"
        app:iconGravity="textStart"
        android:text="Save as Draft"
        android:textAllCaps="false"
        android:backgroundTint="#16A34A"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"
        app:cornerRadius="4dp"/>

    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="16sp"
        android:textColor="#666666"
        android:padding="8dp" />

</LinearLayout>